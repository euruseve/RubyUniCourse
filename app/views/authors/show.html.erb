<div class="container-fluid p-0">
  <div class="mb-3">
    <h1 class="h3 d-inline align-middle">
      <%= @author.name %>
      <% if @author.active %>
        <span class="badge bg-success">Active</span>
      <% else %>
        <span class="badge bg-warning text-dark">Inactive</span>
      <% end %>
    </h1>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Author Information</h5>
        </div>
        <div class="card-body">
          <dl>
            <dt>Name:</dt>
            <dd><%= @author.name %></dd>

            <dt>Status:</dt>
            <dd>
              <% if @author.active %>
                <span class="badge bg-success">Active</span>
              <% else %>
                <span class="badge bg-warning text-dark">Inactive</span>
              <% end %>
            </dd>

            <dt>Biography:</dt>
            <dd><%= @author.bio || "No biography available" %></dd>

            <dt>Total Books:</dt>
            <dd>
              <span class="badge bg-info">
                <%= pluralize(@author.books_count, "book") %>
              </span>
            </dd>
          </dl>

          <div class="mt-3">
            <%= link_to "Back to Authors", authors_path, class: "btn btn-secondary w-100" %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Books by <%= @author.name %></h5>
        </div>
        <div class="card-body">
          <% if @books.any? %>
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Year</th>
                    <th class="text-end">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @books.each do |book| %>
                    <tr>
                      <td><%= link_to book.title, book_path(book) %></td>
                      <td><%= book.year %></td>
                      <td class="text-end">
                        <%= link_to "View", book_path(book), class: "btn btn-sm btn-info" %>
                        <%= link_to "Edit", edit_book_path(book), class: "btn btn-sm btn-warning" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="alert alert-info mb-0">
              <p class="mb-0">This author has no books yet.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>