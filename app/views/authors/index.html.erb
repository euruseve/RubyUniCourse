<div class="container-fluid p-0">
  <div class="mb-3">
    <h1 class="h3 d-inline align-middle">Authors</h1>
    <%= link_to "Back to Books", books_path, class: "btn btn-secondary float-end" %>
  </div>

  <div class="row">
    <div class="col-12">
      <!-- Фільтри -->
      <div class="card mb-3">
        <div class="card-body">
          <div class="btn-group" role="group">
            <%= link_to "All Authors", authors_path, 
                class: "btn #{params[:active].blank? ? 'btn-primary' : 'btn-outline-primary'}" %>
            <%= link_to "Active Only", authors_path(active: true), 
                class: "btn #{params[:active] == 'true' ? 'btn-success' : 'btn-outline-success'}" %>
            <%= link_to "Inactive Only", authors_path(active: false), 
                class: "btn #{params[:active] == 'false' ? 'btn-warning' : 'btn-outline-warning'}" %>
          </div>
        </div>
      </div>

      <!-- Список авторів -->
      <div class="row">
        <% @authors.each do |author| %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
              <div class="card-header">
                <h5 class="card-title mb-0">
                  <%= link_to author.name, author_path(author), class: "text-decoration-none" %>
                  <% if author.active %>
                    <span class="badge bg-success float-end">Active</span>
                  <% else %>
                    <span class="badge bg-warning text-dark float-end">Inactive</span>
                  <% end %>
                </h5>
              </div>
              <div class="card-body">
                <p class="card-text text-muted">
                  <%= truncate(author.bio, length: 150) %>
                </p>
                <div class="mt-3">
                  <span class="badge bg-info">
                    <%= pluralize(author.books_count, "book") %>
                  </span>
                </div>
              </div>
              <div class="card-footer">
                <%= link_to "View Details", author_path(author), class: "btn btn-sm btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <% if @authors.empty? %>
        <div class="alert alert-info">
          <p class="mb-0">No authors found.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>