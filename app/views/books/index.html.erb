<div class="container-fluid p-0">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Bookshelf</h1>
    <%= link_to "New Book", new_book_path, class: "btn btn-primary rounded-pill" %>
  </div>

  <div class="card shadow-sm">
    <div class="card-header bg-white">
      <h5 class="mb-0">All Books</h5>
    </div>
    <div class="card-body p-0">
      <% if @books.any? %>
        <table class="table table-striped table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Title</th>
              <th>Author</th>
              <th>Year</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= link_to book.title, book_path(book), class: "text-decoration-none" %></td>
                <td><%= book.author %></td>
                <td><%= book.year %></td>
                <td class="text-end">
                  <%= link_to "Show", book_path(book), class: "btn btn-sm btn-info rounded-pill me-1" %>
                  <%= link_to "Edit", edit_book_path(book), class: "btn btn-sm btn-warning rounded-pill me-1" %>
                  <%= button_to "Delete", book_path(book), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-danger rounded-pill" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-muted m-3">No books found. <%= link_to "Add your first book", new_book_path %>!</p>
      <% end %>
    </div>
  </div>
</div>
