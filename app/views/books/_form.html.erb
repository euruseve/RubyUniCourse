<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      <div class="alert-message">
        <strong>Error!</strong> <%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:
        <ul class="mt-2 mb-0">
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter book title" %>
  </div>

  <div class="mb-3">
    <%= form.label :author_id, "Author", class: "form-label" %>
    <%= form.collection_select :author_id, 
                               @active_authors, 
                               :id, 
                               :name, 
                               { prompt: "Select an author (optional)" }, 
                               { class: "form-select" } %>
    <div class="form-text">Only active authors are shown</div>
  </div>

  <div class="mb-3">
    <%= form.label :year, class: "form-label" %>
    <%= form.number_field :year, class: "form-control", min: 1900, max: 2030, placeholder: "Enter publication year" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 5, placeholder: "Enter book description" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", books_path, class: "btn btn-secondary" %>
  </div>
<% end %>