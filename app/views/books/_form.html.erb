<%= form_with(model: book, local: true, class: "needs-validation") do |form| %>
  <% if book.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <strong>Error!</strong> <%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:
      <ul class="mt-2 mb-0">
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label fw-semibold" %>
    <%= form.text_field :title, class: "form-control shadow-sm", placeholder: "Enter book title" %>
  </div>

  <div class="mb-3">
    <%= form.label :author, class: "form-label fw-semibold" %>
    <%= form.text_field :author, class: "form-control shadow-sm", placeholder: "Enter author name" %>
  </div>

  <div class="mb-3">
    <%= form.label :year, class: "form-label fw-semibold" %>
    <%= form.number_field :year, class: "form-control shadow-sm", min: 1900, max: 2030, placeholder: "Enter publication year" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label fw-semibold" %>
    <%= form.text_area :description, class: "form-control shadow-sm", rows: 5, placeholder: "Enter book description" %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit "Save", class: "btn btn-primary rounded-pill px-4" %>
    <%= link_to "Cancel", books_path, class: "btn btn-outline-secondary rounded-pill px-4" %>
  </div>
<% end %>
